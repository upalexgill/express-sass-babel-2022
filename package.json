{
  "name": "express-sass-babel-2022",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -s sass:build -p babel lint sass:watch serve",
    "serve": "node index.js",
    "sass:build": "sass src/scss/index.scss:public/css/styles.css",
    "sass:watch": "sass --watch src/scss/index.scss:public/css/styles.css",
    "babel": "babel -w src/js -d public/js --source-maps --out-file-extension .min.js",
    "lint": "eslint --ext .js src --fix",
    "clean": "rm -rf node_modules"
  },
  "keywords": [
    "express",
    "sass",
    "babel"
  ],
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "babel-preset-minify": "^0.5.2",
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "express": "^4.18.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.55.0",
    "serve-favicon": "^2.5.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "babel-preset-minify"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb",
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    }
  }
}
